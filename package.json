{
  "name": "ecommerce",
  "version": "1.0.0",
  "main": "server.js",
  "type": "module",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    
    // For production, start the server with Node
    "start": "node server.js",
    
    // Development: Nodemon for live reloading (use this locally only)
    "server": "nodemon server.js",
    
    // Run React app in development mode (for local dev)
    "client": "npm start --prefix ./client",
    
    // Local development: start both backend (Express) and frontend (React) in parallel
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    
    // Build React app (needed before deploying to Render)
    "client-build": "npm run build --prefix ./client",
    
    // This is for building the entire app (backend + frontend)
    "build": "npm run client-build && npm install --prefix ./client",
    
    // For deployment: you want to serve the React build files with Express
    "postinstall": "npm run build"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "dependencies": {
    "axios": "^1.7.7",
    "bcrypt": "^5.1.1",
    "braintree": "^3.26.0",
    "concurrently": "^9.1.0",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.21.1",
    "express-formidable": "^1.2.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.8.0",
    "morgan": "^1.10.0",
    "nodemon": "^3.1.7",
    "react-hot-toast": "^2.4.1",
    "react-icons": "^5.3.0",
    "react-toastify": "^10.0.6",
    "slugify": "^1.6.6"
  }
}

